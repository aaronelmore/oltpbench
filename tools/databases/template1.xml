<?xml version="1.0"?>
<parameters>

    <!-- Connection details -->
    <dbtype>postgres</dbtype>
    <driver>org.postgresql.Driver</driver>
    <DBUrl>jdbc:postgresql://localhost:5432/%s</DBUrl>
    <MetaDBUrl>jdbc:postgresql://localhost:5432/postgres</MetaDBUrl>    
    <username>dbv</username>
    <password>dbv</password>
    <isolation>TRANSACTION_READ_COMMITTED</isolation>
    
    <!-- Scalefactor in YCSB is *1000 the number of rows in the USERTABLE-->
    <scalefactor>120</scalefactor>
    
    <!-- The workload -->
    <terminals>5</terminals>
    <works>
        <work>
          <time>60</time>
          <rate>100</rate>
          <weights>90,10,0,0,0,0</weights>
        </work>
    </works>

    <!-- YCSB Procedures declaration -->
    <transactiontypes>
        <transactiontype>
                <name>ReadRecord</name>
        </transactiontype>
        <transactiontype>
                <name>InsertRecord</name>
        </transactiontype>
        <transactiontype>
                <name>ScanRecord</name>
        </transactiontype>
        <transactiontype>
                <name>UpdateRecord</name>
        </transactiontype>
        <transactiontype>
                <name>DeleteRecord</name>
        </transactiontype>
        <transactiontype>
                <name>ReadModifyWriteRecord</name>
        </transactiontype>
    </transactiontypes>
</parameters>
